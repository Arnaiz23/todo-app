---
const { user, userLogged } = Astro.props;
---

<header
  class="p-4 border-b border-b-white w-full flex justify-between items-center"
>
  <img src="/icon.svg" alt="icon of the application" class="w-10 h-auto" />
  {
    userLogged ? (
      <>
        <h2>Welcome {user}</h2>
        <button class="py-2 px-4 rounded bg-red-700 font-bold">Logout</button>
      </>
    ) : (
      <a href="/login" class="py-2 px-4 bg-cyan-700 rounded font-bold">
        Login
      </a>
    )
  }
</header>
